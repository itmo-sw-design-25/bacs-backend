{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "TracingOptions": {
        "ServiceName": "bacs-api",
        "OtlpCollectorUrl": "http://jaeger:4317",
        "OtlpProtocol": 0
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Grafana.Loki"
        ],
        "MinimumLevel": {
            "Default": "Information"
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "GrafanaLoki",
                "Args": {
                    "uri": "http://loki:3100",
                    "labels": [
                        {
                            "key": "app",
                            "value": "bacs-api"
                        }
                    ],
                    "propertiesAsLabels": [
                        "app"
                    ],
                    "textFormatter": {
                        "type": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter, Serilog.Formatting.Elasticsearch"
                    }
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithExceptionDetails"
        ]
    }
}
