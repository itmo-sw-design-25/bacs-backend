<?xml version="1.0" encoding="utf-8"?>

<components:ModalBasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:viewModels="clr-namespace:BaCS.Presentation.MAUI.ViewModels"
                          xmlns:resources="clr-namespace:BaCS.Presentation.MAUI.Resources"
                          xmlns:components="clr-namespace:BaCS.Presentation.MAUI.Views.Components"
                          x:Class="BaCS.Presentation.MAUI.Views.SearchResultList"
                          x:DataType="viewModels:SearchResultVm"
                          Title="Найденные варианты"
                          Padding="16">
    <ContentPage.Content >
        <Border StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            <ScrollView>
                <CollectionView ItemsSource="{Binding Resources}" BackgroundColor="White">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <resources:SearchResultListItem Padding="16"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </Border>
    </ContentPage.Content>
</components:ModalBasePage>
