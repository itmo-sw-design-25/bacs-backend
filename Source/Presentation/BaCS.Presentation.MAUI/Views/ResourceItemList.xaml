<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaCS.Presentation.MAUI.Views.ResourceItemList"
             xmlns:vm="clr-namespace:BaCS.Presentation.MAUI.ViewModels"
             x:DataType="vm:ResourceVm">
    <StackLayout Orientation="Horizontal">
        <Image>
            <Image.Source>
                <UriImageSource Uri="{Binding ImageUrl}" />
            </Image.Source>
        </Image>
        <StackLayout Orientation="Vertical">
            <Label Text="{Binding Name}" />
            <StackLayout Orientation="Horizontal">
                <!-- TODO взять время работы  -->
                <Label Text="{Binding TypeStr}" />
            </StackLayout>
            <Label Text="{Binding Description}" MaxLines="2" />
        </StackLayout>
    </StackLayout>
</ContentView>
