<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaCS.Presentation.MAUI.Views.LocationCard"
             xmlns:vm="clr-namespace:BaCS.Presentation.MAUI.ViewModels"
             xmlns:local="clr-namespace:BaCS.Presentation.MAUI.Views"
             xmlns:properties="clr-namespace:BaCS.Presentation.MAUI.Properties"
             x:DataType="vm:LocationCardVm">
    <StackLayout Orientation="Vertical" Background="Transparent">
        <Image>
            <Image.Source>
                <UriImageSource
                    Uri="{Binding ImageUrl}"
                    CachingEnabled="True" />
            </Image.Source>
        </Image>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image>
                    <Image.Source>
                        <FileImageSource File="Icons\Location.svg" />
                    </Image.Source>
                </Image>
                <Label Grid.Column="1" Text="{Binding Address}" />
            </Grid>

            <Label Text="{Binding Description}" />
        </StackLayout>

        <StackLayout>
            <Label Text="{x:Static properties:Resources.PlacesInOffice}" />
            <ListView
                ItemsSource="{Binding Resources}"
                SelectionMode="None"
                SeparatorVisibility="Default">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:ResourceItemList BindingContext="{Binding }" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</ContentView>
