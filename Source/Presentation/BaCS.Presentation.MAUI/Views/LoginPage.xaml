<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:properties="clr-namespace:BaCS.Presentation.MAUI.Properties"
             xmlns:viewModels="clr-namespace:BaCS.Presentation.MAUI.ViewModels"
             x:Class="BaCS.Presentation.MAUI.Views.LoginPage"
             BackgroundImageSource="background_detailed.png"
             x:DataType="viewModels:LoginViewModel">

    <ContentPage.Content>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Image
                Source="logo.svg"
                HeightRequest="185"
                Aspect="AspectFit"/>

            <Label
                Text="{x:Static properties:Resources.Promo}"
                Style="{StaticResource Headline}"
                FontSize="26"
                FontFamily="NunitoExtraBold"
                TextColor="#002734"/>

            <Label
                x:Name="Label"
                Text="{x:Static properties:Resources.WelcomeText}"
                Style="{StaticResource SubHeadline}"
                TextColor="White"/>

            <Button
                x:Name="LoginButton"
                Background="{StaticResource Primary}"
                Text="Login"
                Command="{Binding LoginCommand}"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
