<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="BaCS.Presentation.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BaCS.Presentation.MAUI"
    xmlns:properties="clr-namespace:BaCS.Presentation.MAUI.Properties"
    xmlns:views="clr-namespace:BaCS.Presentation.MAUI.Views"
    Title="BaCS.Presentation.MAUI"
    BackgroundColor="Transparent"
    Shell.NavBarIsVisible="False"
    BackgroundImageSource="background_blur.png">

    <TabBar Route="Login">
        <ShellContent ContentTemplate="{DataTemplate views:LoginPage}"/>
    </TabBar>

    <TabBar Route="Home">
        <Tab
            Title="{x:Static properties:Resources.Search}"
            Icon="Search.svg">
            <ShellContent
                ContentTemplate="{DataTemplate views:SearchPage}"
                Route="search"/>
        </Tab>
        <Tab
            Title="{x:Static properties:Resources.Offices}"
            Icon="Office.svg">
            <ShellContent
                Route="office"
                ContentTemplate="{DataTemplate views:OfficeListPage}" />
        </Tab>
        <Tab
            Title="{x:Static properties:Resources.Journal}"
            Icon="Journal.svg">
            <ShellContent
                Route="journal"
                ContentTemplate="{DataTemplate views:JournalPage}" />
        </Tab>
        <Tab
            Title="{x:Static properties:Resources.Profile}"
            Icon="Profile.svg">
            <ShellContent
                Route="profile"
                ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
